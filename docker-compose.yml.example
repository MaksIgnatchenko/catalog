version: '3'

services:
  db:
    image: "postgres:11.1"
    ports:
      - "5432:5432"
    restart: unless-stopped
    container_name: catalog_db
    volumes:
      - db_data:/data/postgres
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
      POSTGRES_DB: database
      PGDATA: /data/postgres
  nginx:
    image: nginx:latest
    container_name: catalog_nginx
    ports:
      - "80:80"
      - "443:443"
    environment:
      ENV: local
      SERVER_NAME: localhost
      SSL: "off"
    volumes:
      - ./:/var/www
      - ./docker/nginx.conf:/etc/nginx/conf.d/default.conf
    restart: unless-stopped
    depends_on:
      - php
  php:
    build: ./
    container_name: catalog_php
    volumes:
      - ./:/var/www
      - ./docker/crontasks:/var/crontasks
    command: /bin/bash -c "cp /var/crontasks /var/spool/cron/crontabs/root && chown root:root /var/spool/cron/crontabs/root && chmod 0600 /var/spool/cron/crontabs/root && composer install-script && /usr/bin/supervisord -n -c /var/www/docker/supervisord.conf"
    depends_on:
      - db
    links:
      - db:database_host
    restart: unless-stopped
  node:
    image: node:8.12
    container_name: catalog_node
    volumes:
      - ./:/var/www
    working_dir: /var/www
    command: /bin/bash
    stdin_open: true
    tty: true
    restart: unless-stopped
volumes:
  db_data: